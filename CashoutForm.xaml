<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JusGiveaway.CashoutForm"
             Title="CashoutForm">
    <VerticalStackLayout Padding="20">
        <Label x:Name="UserInfoLabel" />
        
        <Entry x:Name="FirstName" Placeholder="First Name" />
        <Entry x:Name="LastName" Placeholder="Last Name" />
        <Entry x:Name="BankAccountNo" Placeholder="Bank Account Number" />
        <Entry x:Name="BankName" Placeholder="Bank Name" />

        <Button Text="Submit" Clicked="OnSubmitCashoutClicked" />
    </VerticalStackLayout>
</ContentPage>